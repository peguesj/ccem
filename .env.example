# CCEM Hook System Environment Variables
# Copy this file to .env and update with your actual values

# ============================================================================
# VIKI Integration
# ============================================================================
VIKI_API_TOKEN=your-viki-api-token-here
VIKI_URL=https://viki.yjos.lgtm.build

# ============================================================================
# YJOS Integration
# ============================================================================
YJOS_API_KEY=your-yjos-api-key-here
YJOS_URL=https://yjos.lgtm.build

# ============================================================================
# Hook Server Configuration
# ============================================================================
# This is the API key that hook endpoints expect in X-API-Key header
HOOK_API_KEY=your-hook-api-key-here

# ============================================================================
# Development Settings
# ============================================================================
NODE_ENV=development
DEBUG=true

# ============================================================================
# Production Settings
# ============================================================================
# NODE_ENV=production
# DEBUG=false
# VIKI_URL=https://viki.yjos.lgtm.build
# YJOS_URL=https://yjos.lgtm.build
